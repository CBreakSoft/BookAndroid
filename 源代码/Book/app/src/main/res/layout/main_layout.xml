<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/classification_layout"
    android:background="@drawable/book"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:paddingBottom="@dimen/activity_vertical_margin"
android:paddingLeft="@dimen/activity_horizontal_margin"
android:paddingRight="@dimen/activity_horizontal_margin"
android:paddingTop="@dimen/activity_vertical_margin"

tools:context="com.dingcheng365.book.ClassificationActivity">

    <Button
        android:text="显示分类"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="76dp"
        android:layout_marginEnd="76dp"
        android:id="@+id/cn_bt_display"
        android:layout_alignBaseline="@+id/cn_bt_add"
        android:layout_alignBottom="@+id/cn_bt_add"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="cn_bt_display_Click" />

    <Button
        android:text="显示笔记"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/m_bt_noteDisplay"
        android:onClick="m_bt_noteDisplay_Click"
        android:layout_alignBaseline="@+id/m_bt_noteAdd"
        android:layout_alignBottom="@+id/m_bt_noteAdd"
        android:layout_alignLeft="@+id/m_bt_bookDisplay"
        android:layout_alignStart="@+id/m_bt_bookDisplay" />

    <TextView
        android:text="类别管理"
        android:textColor="#F0F8FF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="显示书籍"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/m_bt_bookDisplay"
        android:onClick="m_bt_bookDisplay_Click"
        android:layout_alignBaseline="@+id/m_bt_bookAdd"
        android:layout_alignBottom="@+id/m_bt_bookAdd"
        android:layout_alignLeft="@+id/cn_bt_display"
        android:layout_alignStart="@+id/cn_bt_display" />

    <TextView
        android:text="统计查询"
        android:textColor="#F0F8FF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/m_bt_noteAdd"
        android:layout_alignLeft="@+id/textView9"
        android:layout_alignStart="@+id/textView9"
        android:layout_marginTop="20dp"
        android:id="@+id/textView10" />

    <Button
        android:text="用户笔记"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/textView10"
        android:layout_alignLeft="@+id/m_bt_noteAdd"
        android:layout_alignStart="@+id/m_bt_noteAdd"
        android:onClick="m_bt_sumUser_Click"/>

    <Button
        android:text="书籍笔记"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/button"
        android:layout_alignLeft="@+id/m_bt_noteDisplay"
        android:layout_alignStart="@+id/m_bt_noteDisplay"
        android:id="@+id/button2"
        android:onClick="m_bt_sumBook_Click"/>

    <Button
        android:text="退出"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/textView10"
        android:layout_alignStart="@+id/textView10"
        android:layout_marginBottom="26dp"
        android:onClick="m_bt_exit_Click"
        android:id="@+id/button3" />

    <Button
        android:text="增加书籍"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/m_bt_bookAdd"
        android:onClick="m_bt_bookAdd_Click"
        android:layout_below="@+id/textView4"
        android:layout_alignLeft="@+id/textView9"
        android:layout_alignStart="@+id/textView9" />

    <Button
        android:text="增加分类"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="cn_bt_add_Click"
        android:id="@+id/cn_bt_add"
        android:layout_marginTop="23dp"
        android:layout_below="@+id/textView"
        android:layout_alignLeft="@+id/m_bt_bookAdd"
        android:layout_alignStart="@+id/m_bt_bookAdd" />

    <TextView
        android:text="笔记管理"
        android:textColor="#F0F8FF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="11dp"
        android:layout_marginTop="17dp"
        android:id="@+id/textView9"
        android:layout_below="@+id/m_bt_bookAdd"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="增加笔记"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/m_bt_noteAdd"
        android:onClick="m_bt_noteAdd_Click"
        android:layout_below="@+id/textView9"
        android:layout_alignLeft="@+id/textView9"
        android:layout_alignStart="@+id/textView9" />

    <TextView
        android:text="书籍管理"
        android:textColor="#F0F8FF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:id="@+id/textView4"
        android:layout_below="@+id/cn_bt_display"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
